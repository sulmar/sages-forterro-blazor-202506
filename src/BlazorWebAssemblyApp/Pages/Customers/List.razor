@page "/customers"
@using Domain.Models

<h3>Customer List</h3>

<p>@message</p>

@if (customers is null)
{
    <em>Loading customers...</em>
}
else
{
    <ul>
        @foreach (var customer in customers)
        {
            <li>@customer.Id @customer.Name @customer.Email</li>
        }
    </ul>
}
