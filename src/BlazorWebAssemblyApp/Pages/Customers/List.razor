@page "/customers"
@using Domain.Models
@using BlazorWebAssemblyApp.Shared

<h3>Customer List</h3>

<Loader IsLoading=@isLoading>

    <Content>
        <Table Items="@customers">
            <HeaderTemplate>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
            </HeaderTemplate>

            <RowTemplate Context="customer">
                <td>@customer.Id </td>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
            </RowTemplate>
        </Table>
       
    </Content>

</Loader>
