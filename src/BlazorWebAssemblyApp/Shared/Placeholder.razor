@using BlazorWebAssemblyApp.Models


<div class="spinner-border text-@Theme" role="status">
    <span class="visually-hidden">@Message</span>   
</div>


@if (@ApplicationContext.Mode)
{
    @ApplicationContext.Count


    <div class="alert alert-@Level" role="alert">
        This is a @Level alert—check it out!
    </div>
}

@code {

    [Parameter]
    public string Message { get; set; } = "Loading items...";

    [CascadingParameter(Name = "thm")]
    public string Theme { get; set; } = "light";

    [CascadingParameter(Name = "lvl")]
    public string Level { get; set; }

    [CascadingParameter]
    public ApplicationContext ApplicationContext { get; set; }
}